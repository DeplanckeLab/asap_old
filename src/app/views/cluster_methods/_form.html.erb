<%= form_for(cluster_method) do |f| %>
  <% if cluster_method.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cluster_method.errors.count, "error") %> prohibited this cluster_method from being saved:</h2>

      <ul>
      <% cluster_method.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table>
<tr><td>Name</td><td><%= f.text_field :name %></td></tr>
<tr><td>Label</td><td><%= f.text_field :label %></td></tr>
<tr><td>Description</td><td><%= f.text_field :description %></td></tr>
<tr><td>Speed</td><td><%= f.select :speed_id, Speed.all.map{|s| [s.name, s.id]} %></td></tr>
<tr><td>Link</td><td><%= f.text_field :link, :size => 100 %></td></tr>
<tr><td>Warning</td><td><%= f.text_field :warning, :size => 100 %></td></tr>
<tr><td>Command line</td><td><%= f.text_field :program, :size => 100 %></td></tr>
<tr><td>Attributes</td><td><%= f.text_area :attrs_json, :cols => 100, :rows => 30 %></td></tr>

</table>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
