<p id="notice"><%= notice %></p>

<h1>Norms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Label</th>
      <th>Description</th>
      <th>Speed</th>
      <th>Link</th>
      <th>Attr_json</th>
      <th>Output is LOG</th>
      <th>Hidden</th>
      <th>Command line</th>
      <th>Handles log</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @norms.each do |norm| %>
      <tr>
	<td><%= norm.name %></td>
	<td><%= norm.label %></td>
        <td><%= norm.description %></td>
	<td><%= norm.speed_id %></td>
        <td><%= norm.link %></td>
        <td><%= norm.attrs_json %></td>
	<td><%= (norm.output_is_log) ? 'yes' : 'no' %></td>
	<td><%= (norm.hidden) ? 'yes' : 'no' %></td>
        <td><%= norm.program %></td>
        <td><%= (norm.handles_log == true) ? 'Yes' : 'No' %></td>
        <td><%= link_to 'Show', norm %></td>
        <td><%= link_to 'Edit', edit_norm_path(norm) %></td>
        <td><%= link_to 'Destroy', norm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Norm', new_norm_path %>
