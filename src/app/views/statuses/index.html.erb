<p id="notice"><%= notice %></p>

<h1>Statuses</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Color</th>	    
      <th>Image extension</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.sort.each do |status| %>
      <tr>
	<td><%= status.id %></td>
	<td><%= status.name %></td>
	<td><%= status.color %></td>
	<td><%= status.img_extension %></td>
        <td><%= link_to 'Show', status %></td>
        <td><%= link_to 'Edit', edit_status_path(status) %></td>
        <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Status', new_status_path %>
