 <div id='point_details' class='hidden'></div>
<div class='panel panel-default'>
<div class='panel-heading'>Correlation plot</div>
 <div id='corr_plot_container' class='corr_plot'></div>
</div>

 <%= javascript_tag do %>

 var h = $(window).height();

 var data = [<%= raw @corr_plot_json %>];
 var layout = {
  xaxis: {title: '', type:'linear'},
  yaxis: {title: '', type:'linear'},
  height: h - <%= (params[:full_screen]) ? 0 : 180 %>,
  width: h - <%= (params[:full_screen]) ? 0 : 180 %>,
  hoverinfo:"text",
  hoveron:"points",
  hovermode: 'closest',
  dragmode: 'pan',
  showlegend:false,
  margin: {l:30, r:30, b:30, t: 30 },
  title:''
};

  Plotly.plot('corr_plot_container', data, layout);


 <% end %>
