<%= form_for(support) do |f| %>
  <% if support.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(support.errors.count, "error") %> prohibited this support from being saved:</h2>

      <ul>
      <% support.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class='alert alert-success'>
    We thank you for your support message. This will help us to continue the development and maintenance of this service. 
  </div>
  
  <form id='support_message'>
    
    <div class='form-group col-md-12'>
      <%= label_tag 'My name (will be displayed)', 'My name', {'data-toggle' => "tooltip", 'title' => "Your name or initials."} %>
      <%= f.text_field :name, {:class => "form-control", :placeholder => "Name / Initials / Pseudo"} %>
    </div>
    
    <div class='form-group col-md-12'>
      <%= label_tag 'My affiliation (will be displayed)', 'My affiliation', {'data-toggle' => "tooltip", 'title' => "Institution / Department"} %>
      <%= f.text_field :affiliation, {:class => "form-control", :placeholder => "Institution / Faculty / Department / Company"} %>
    </div>
    <br/>
    
    <div class='form-group col-md-12'>
      <%= label_tag 'My message', 'My message', {'data-toggle' => "tooltip", 'title' => "Message"} %>
      <%= f.text_area :message, {:cols => 70, :rows =>10, :class => "form-control", :placeholder => "Message"} %>
    </div>
    <br/>    
  <div class="actions">
    <%= f.submit 'Send message', {:class => 'btn btn-primary'} %>
  </div>
<% end %>
